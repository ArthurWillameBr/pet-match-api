generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pet {
  id           String      @id @default(uuid())
  name         String
  about        String
  age          AgeCategory
  size         Size
  energy_level EnergyLevel
  environment  Environment
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  org_id String
  Org    Org    @relation(fields: [org_id], references: [id])

  @@map("pets")
}

model Org {
  id            String @id @default(uuid())
  name          String
  author_name   String
  email         String @unique
  password_hash String
  whatsapp      String

  cep          String
  state        String
  city         String
  neighborhood String
  street       String

  created_at DateTime @default(now())
  updatedAt  DateTime @updatedAt

  latitude  Decimal
  longitude Decimal

  pets Pet[]

  @@map("orgs")
}

enum Size {
  SMALL
  MEDIUM
  LARGE
}

enum EnergyLevel {
  LOW
  MEDIUM
  HIGH
}

enum Environment {
  INDOOR
  OUTDOOR
  MIXED
}

enum AgeCategory {
  PUPPY
  ADULT
  SENIOR
}
